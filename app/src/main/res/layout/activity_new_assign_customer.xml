<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".integratedServicesForAllTypes.view.NewAssignCustomerActivity">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="@dimen/_4sdp"
                android:visibility="gone"
                app:SpinKit_Color="@color/light_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_16sdp"
                android:paddingVertical="@dimen/_16sdp">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customerNameTextInputLayout"
                    style="@style/OutlineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#28257E"
                    app:endIconCheckable="true"
                    app:endIconDrawable="@drawable/ic_check">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ellipsize="end"
                        android:ems="10"
                        android:maxLength="100"
                        android:inputType="text"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Customer Name"
                        android:digits="QWERTZUIOPASDFGHJKLYXCVBNMqwertzuiopasdfghjklyxcvbnm. "
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Address"
                    style="@style/OutlineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#28257E"
                    app:endIconCheckable="true"
                    app:endIconDrawable="@drawable/ic_check">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ems="10"
                        android:maxLines="1"
                        android:maxLength="255"
                        android:ellipsize="end"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Address"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/PinCode"
                    style="@style/OutlineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#28257E"
                    app:endIconCheckable="true"
                    app:endIconDrawable="@drawable/ic_check">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPinCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ems="10"
                        android:maxLines="1"
                        android:maxLength="6"
                        android:ellipsize="end"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Pin Code"
                        android:inputType="phone"
                        android:textSize="@dimen/_12ssp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/MobileNumber"
                    style="@style/OutlineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#28257E"
                    app:endIconCheckable="true"
                    app:endIconDrawable="@drawable/ic_check">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etMobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ems="10"
                        android:digits="0123456789"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:imeOptions="actionNext"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/EmailAddress"
                    style="@style/OutlineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#28257E"
                    app:endIconCheckable="true"
                    app:endIconDrawable="@drawable/ic_check">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:ems="10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:imeOptions="actionDone"
                        android:fontFamily="@font/roboto_regular"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:textSize="@dimen/_12ssp" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvConfirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_16ssp"
                    android:paddingVertical="@dimen/_8sdp"
                    android:paddingHorizontal="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:background="@drawable/btn_gradient"
                    android:text="Confirm"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>



</androidx.appcompat.widget.LinearLayoutCompat>