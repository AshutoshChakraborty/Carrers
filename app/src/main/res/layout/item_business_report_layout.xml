<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="@dimen/_4sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:maxLines="2"
                tools:text="NAME : ABC"
                android:textColor="#2A277E"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:maxLines="2"
                tools:text="19-11-2019"
                android:textColor="#838383"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPolicyNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            android:maxLines="2"
            tools:text="POLICY N.O : JEEVAN RIDDHI"
            android:textColor="#838383"
            android:textSize="@dimen/_10ssp"
            android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCollectionAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:gravity="end"
                android:maxLines="2"
                tools:text="COLLECTION AMOUNT : 100.00"
                android:textColor="#838383"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:visibility="invisible"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                app:cardElevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:text="Pending"
                    android:background="@drawable/bt_background_big"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:textAllCaps="true"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

